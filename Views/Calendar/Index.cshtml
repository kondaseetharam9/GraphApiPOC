<!-- <CalendarIndexSnippet> -->
@model CalendarViewModel

@{
    ViewData["Title"] = "Calendar";
}

<div class="mb-3">
  <h1 class="mb-3">@Model.TimeSpan()</h1>
  <a class="btn btn-light btn-sm" asp-controller="Calendar" asp-action="New">New event</a>
</div>
<div class="calendar-week">
  <div class="table-responsive">
    <table class="table table-sm">
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Event</th>
        </tr>
      </thead>
      <tbody>
          <partial name="_DailyEventsPartial" for=@Model.Saturday />
          <partial name="_DailyEventsPartial" for=@Model.Sunday />
          <partial name="_DailyEventsPartial" for=@Model.Monday />
          <partial name="_DailyEventsPartial" for=@Model.Tuesday />
          <partial name="_DailyEventsPartial" for=@Model.Wednesday />
          <partial name="_DailyEventsPartial" for=@Model.Thursday />
          <partial name="_DailyEventsPartial" for=@Model.Friday />

      </tbody>
    </table>
  </div>
</div>
<!-- </CalendarIndexSnippet> -->
